[Unit]
Description="HashiCorp Consul - A service mesh solution"
Documentation=https://www.consul.io/
Requires=network-online.target
After=network-online.target
ConditionDirectoryNotEmpty=/opt/hashistack/consul

[Service]
Type=notify
EnvironmentFile=/etc/hashistack.env
User=consul
Group=hashistack
ExecStart=/usr/bin/consul agent -config-dir=/etc/consul.d/ -datacenter $CONSUL_DATACENTER -encrypt $CONSUL_ENCRYPT_KEY -recursor $DNS_SERVER1 -recursor $DNS_SERVER2
ExecReload=/bin/kill --signal HUP $MAINPID
KillMode=process
KillSignal=SIGTERM
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
